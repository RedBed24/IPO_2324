<Window x:Class="hospital_gui_wpf.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hospital_gui_wpf"
        mc:Ignorable="d"
        Title="Login" Height="515" Width="412">
    <Grid x:Name="pnlDisenoPrincipal" Margin="0,0,0,1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="178*"/>
            <ColumnDefinition Width="111*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblUsuario" 
        Grid.Row="1" Grid.Column="1" 
        Content="Usuario" 
        Margin="5,10,0,0" 
        FontSize="20"
        VerticalContentAlignment="Bottom" 
        HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" />
        <TextBox x:Name="txtUsuario" Grid.Row="2" Grid.Column="1" 
             BorderThickness="2" 
             VerticalContentAlignment="Center" Margin="10,10,0,23" FontSize="16" />

        <Label x:Name="lblContrasena" 
        Grid.Row="3" Grid.Column="1"  
        Content="Contraseña" 
        Margin="5,10,0,0" 
        VerticalContentAlignment="Bottom" 
        HorizontalContentAlignment="Stretch" FontSize="20" >
            <Label.Foreground>
                <SolidColorBrush Color="Black" Opacity="0.98"/>
            </Label.Foreground>
        </Label>
        <PasswordBox x:Name="passContrasena" 
             Grid.Row="4" Grid.Column="1" 
             PasswordChar="*"
             BorderThickness="2" 
               VerticalContentAlignment="Center" 
                Margin="10,10,0,23" FontSize="16"
             IsEnabled="False" />
    </Grid>
</Window>
