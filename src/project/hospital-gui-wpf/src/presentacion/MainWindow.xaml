                        <TextBox x:Name="txtApellidoHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="2"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Apellido}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtEdadHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="3"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Edad}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtTelefonoHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="4"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Telefono}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtCorreoHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="6"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Correo}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtDireccionHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="5"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Direccion}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtHistorial" TextWrapping="Wrap" Grid.Column="3" Grid.Row="2" Margin="15,0,15,0" Grid.RowSpan="4"
