                                <Grid HorizontalAlignment="Left" Width="354">
                                    <GroupBox x:Name="DatosSexoTipoPersonal" Grid.Row="0" Grid.Column="0" Grid.RowSpan="1" Header="Sexo y Tipo " BorderThickness="2" BorderBrush="LightSkyBlue" Background="Transparent">

                                        <StackPanel Grid.Column="2" Grid.Row="7" Orientation="Horizontal">
                                            <Label x:Name="lblSexoPersonal" Content="Género:" HorizontalAlignment="Right" VerticalAlignment="Center" Height="26" Width="51"/>
                                            <RadioButton x:Name="radioFemeninoPersonal" VerticalAlignment="Center"
                                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Mujer, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41">
                                                <Image Source="\datos\imagenes\femenino.png" Width="20" Height="20" ToolTip="Femenino"/>
                                            </RadioButton>

                                            <RadioButton x:Name="radioMasculinoPersonal" VerticalAlignment="Center"
                                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Hombre, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41">
                                                <Image Source="\datos\imagenes\masculino.png" Width="20" Height="20" ToolTip="Masculino"/>
                                            </RadioButton>

                                            <RadioButton x:Name="radioOtroPErsonal" VerticalAlignment="Center"
                                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Otro, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41">
                                                <Image Source="\datos\imagenes\otro.png" Width="20" Height="20" ToolTip="Otro Género"/>
                                            </RadioButton>

                                            <Label x:Name="lblTipoPersonal" Content="Tipo:" VerticalAlignment="Center" Grid.Column="2" Grid.Row="7" />
                                            <RadioButton x:Name="radioSanitarioPersonal" VerticalAlignment="Center" Grid.Column="2" Grid.Row="7"
                                                     IsChecked="{Binding SelectedItem.Tipo, ConverterParameter=Sanitario, Converter={StaticResource TipoPersonalConverter}, ElementName=lstListaPersonal}" GroupName="Tipo">
                                                <Image Source="\datos\imagenes\sanitario.png" Width="20" Height="20" ToolTip="Sanitario"/>
                                            </RadioButton>

                                            <RadioButton x:Name="radioLimpiezaPersonal" VerticalAlignment="Center" Grid.Column="2" Grid.Row="7"
                                                     IsChecked="{Binding SelectedItem.Tipo, ConverterParameter=Limpieza, Converter={StaticResource TipoPersonalConverter}, ElementName=lstListaPersonal}" GroupName="Tipo">
                                                <Image Source="\datos\imagenes\limpieza.png" Width="20" Height="20" ToolTip="Limpieza"/>
                                            </RadioButton>
                                        </StackPanel>
                                    </GroupBox>
                                </Grid>
                            </Viewbox>
                            <Viewbox Grid.Column="3" Grid.Row="7">
                                <Image x:Name="btnConfirmarModificacionPersonal"  VerticalAlignment="Center" Height="30" MouseDown="btnConfirmarModificacionPersonal_MouseDown" Source="\datos\imagenes\confirmar_modificacion.png" ToolTip="Confirmar modificación"/>
                            </Viewbox>
                            <Border BorderBrush="LightSkyBlue" BorderThickness="2" Margin="5" Grid.Column="3" Grid.RowSpan="6" Grid.Row="1">
                                <Image Source="{Binding ElementName=lstListaPersonal, Path=SelectedItem.Imagen}" Width="150" Height="130" Stretch="UniformToFill"/>
                            </Border>
                            <Rectangle Grid.RowSpan="9"  Fill="LightSkyBlue"/>
                            <Rectangle Grid.ColumnSpan="5" Fill="LightSkyBlue"/>
                            <Rectangle Grid.RowSpan="9" Grid.Column="4" Fill="LightSkyBlue" Margin="5,0,0,0"/>
                            <Rectangle Grid.ColumnSpan="5" Grid.Row="8" Fill="LightSkyBlue" Margin="0,7,0,0"/>
                        </Grid>

                    </Grid>
                </TabItem>
            </TabControl>
            <Viewbox  Grid.Row="0" Grid.Column="1">
            <Button x:Name="btnAlta" Content="Dar de alta" HorizontalAlignment="Center" VerticalAlignment="Center" Width="74" Background="LightSkyBlue" Click="btnAltaPaciente" BorderThickness="1"/>
        </Viewbox>
        <Viewbox Grid.Row="0" Grid.Column="2">
            <Button x:Name="btnBaja" Content="Dar de baja"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="74" Background="LightSkyBlue" Click="btnBajaPaciente" BorderThickness="1"/>
        </Viewbox>
        <Viewbox Grid.Column="4" Grid.Row="0">
            <Border BorderBrush="LightSkyBlue" BorderThickness="2" Margin="2,2,2,2" CornerRadius="40">
                <Border.Clip>
                    <EllipseGeometry Center="30,30" RadiusX="27" RadiusY="27"/>
                </Border.Clip>
                <Image x:Name="btnPerfilUsuario" VerticalAlignment="Top" HorizontalAlignment="Center" Width="40" Stretch="Uniform"
                   Source="/datos/imagenes/Antonio.jpg" MouseDown="btnPerfilUsuario_MouseDown"/>
            </Border>
        </Viewbox>
    </Grid>
</Window>