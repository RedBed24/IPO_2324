<Window x:Class="hospital_gui_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hospital_gui_wpf"
        mc:Ignorable="d"
        Title="Gestor de Usuarios" Height="487" Width="847" 
        Closing="Window_Closing" 
        Loaded="Window_Loaded">
    <Window.Resources>
        <local:GeneroConverter x:Key="GeneroConverter"/>
        <local:TipoPersonalConverter x:Key="TipoPersonalConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="409*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="1">
            <TabItem Header="Pacientes" Background="White">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="211*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="569*"/>
                    </Grid.ColumnDefinitions>

                    <GridSplitter x:Name="splitterPacientes" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                    <ListBox x:Name="lstListaPacientes">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Imagen}" Width="50" Height="50" Margin="10"/>
                                    <TextBlock Text="{Binding Nombre}" Margin="10" FontSize="13" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Telefono}" Margin="10" FontSize="13" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Correo}" Margin="10" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>
                    <Grid Grid.Column="2" Background="WhiteSmoke">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="26"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="26"/>
                            <ColumnDefinition Width="70*"/>
                            <ColumnDefinition Width="233*"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="210*"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="26"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="lblNombrePacientes" Content="Nombre:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
                        <Label x:Name="lblApellidoPacientes" Content="Apellido:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2"/>
                        <Label x:Name="lblEdadPacientes" Content="Edad:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3"/>
                        <Label x:Name="lblTelefonoPacientes" Content="Teléfono:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="4"/>
                        <Label x:Name="lblDireccionPacientes" Content="Dirección:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="5"/>
                        <Label x:Name="lblCorreoPacientes" Content="Correo:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="6"/>
                        <Label x:Name="lblSexoPacientes" Content="Sexo:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="7"/>
                        <TextBox x:Name="txtnombrePacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" 
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Nombre}" FontSize="16" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtApellidoPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Apellido}" FontSize="16" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtEdadPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="3"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Edad}" FontSize="16" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtTelefonoPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="4"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Telefono}" FontSize="16" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtDireccionPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="5"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Direccion}" FontSize="16" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtCorreoPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="6"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Correo}" FontSize="16" FontWeight="DemiBold"/>
                        <Button x:Name="btnConfirmarModificacionPacientes" Content="Confirmar modificación" Grid.Column="4" Height="20" VerticalAlignment="Center" Grid.Row="7"/>
                        <Image Source="{Binding ElementName=lstListaPacientes, Path=SelectedItem.Imagen}"
                                   Stretch="Uniform" Grid.Column="4" Grid.RowSpan="6" Grid.Row="1"/>
                        <Rectangle Grid.RowSpan="9"  Fill="CadetBlue"/>
                        <Rectangle Grid.ColumnSpan="7" Fill="CadetBlue"/>
                        <Rectangle Grid.RowSpan="9" Grid.Column="6" Fill="CadetBlue"/>
                        <Rectangle Grid.ColumnSpan="7" Grid.Row="8" Fill="CadetBlue"/>
                        <StackPanel Grid.Column="2" Grid.Row="7" Orientation="Horizontal">
                            <RadioButton x:Name="radioFemeninoPacientes" Content="F" VerticalAlignment="Center"
                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Mujer, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41"/>
                            <RadioButton x:Name="radioMasculinoPacientes" Content="M" VerticalAlignment="Center"
                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Hombre, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41"/>
                            <RadioButton x:Name="radioOtroPacientes" Content="O" VerticalAlignment="Center"
                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Otro, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41"/>
                        </StackPanel>
                    </Grid>

                </Grid>
            </TabItem>

            <TabItem Header="Historial" Background="WhiteSmoke">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="211*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="569*"/>
                    </Grid.ColumnDefinitions>

                    <GridSplitter x:Name="splitterHistoriales" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                    <ListBox x:Name="lstListaHistoriales">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Imagen}" Width="50" Height="50" Margin="10"/>
                                    <TextBlock Text="{Binding Nombre}" Margin="10" FontSize="13" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Descripcion}" Margin="10" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>

                    <Grid Grid.Column="2" Background="WhiteSmoke">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="26"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="26"/>
                            <ColumnDefinition Width="69*"/>
                            <ColumnDefinition Width="120*"/>
                            <ColumnDefinition Width="172*"/>
                            <ColumnDefinition Width="191*"/>
                            <ColumnDefinition Width="26"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="lblNombreHistorial" Content="Nombre:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"/>
                        <Label x:Name="lblApellidoHistorial" Content="Apellido:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2"/>
                        <Label x:Name="lblEdadHistorial" Content="Edad:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3"/>
                        <Label x:Name="lblTelefonoHistorial" Content="Teléfono:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="4"/>
                        <Label x:Name="lblDireccionHistorial" Content="Dirección:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="5"/>
                        <Label x:Name="lblCorreoHistorial" Content="Correo:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="6"/>
                        <Label x:Name="lblSexoHistorial" Content="Sexo:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="7"/>
                        <TextBox x:Name="txtnombreHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="1"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Nombre}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtApellidoHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="2"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Apellido}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtEdadHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="3"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Edad}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtTelefonoHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="4"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Telefono}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtCorreoHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="6"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Correo}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtDireccionHistorial" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="5"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Direccion}" FontSize="14" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtHistorial" TextWrapping="Wrap" Grid.Column="3" Grid.Row="2" Margin="15,0,15,0" Grid.RowSpan="4"
                                 Text="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Descripcion}" FontSize="14" FontWeight="SemiBold"/>
                        <StackPanel Grid.Column="2" Grid.Row="7" Orientation="Horizontal">
                            <RadioButton x:Name="radioFemeninoHistorial" Content="F" Width="40" VerticalAlignment="Center"
                                         IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Mujer, Converter={StaticResource GeneroConverter}, ElementName=lstListaHistoriales}"/>
                            <RadioButton x:Name="radioMasculinoHistorial" Content="M" Width="40" VerticalAlignment="Center"
                                         IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Hombre, Converter={StaticResource GeneroConverter}, ElementName=lstListaHistoriales}"/>
                            <RadioButton x:Name="radioOtroHistorial" Content="O" Width="40" VerticalAlignment="Center"
                                         IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Otro, Converter={StaticResource GeneroConverter}, ElementName=lstListaHistoriales}"/>
                        </StackPanel>
                        <Button x:Name="btnConfirmarModificacionHistorial" Content="Confirmar modificación" Margin="80,0,80,0" Grid.Column="3" VerticalAlignment="Center" Grid.Row="7" Grid.ColumnSpan="2"/>
                        <Image Margin="15,0,15,0"
                            Source="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Imagen}"
                            Stretch="Uniform" Grid.Column="4" Grid.RowSpan="6" Grid.Row="1"/>
                        <Rectangle Grid.RowSpan="9"  Fill="CadetBlue"/>
                        <Rectangle Grid.ColumnSpan="6" Fill="CadetBlue"/>
                        <Rectangle Grid.RowSpan="9" Grid.Column="5" Fill="CadetBlue"/>
                        <Rectangle Grid.ColumnSpan="6" Grid.Row="8" Fill="CadetBlue"/>
                    </Grid>

                </Grid>
            </TabItem>

            <TabItem Header="Citas" Background="WhiteSmoke"/>

            <TabItem Header="Personal" Background="WhiteSmoke">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="211*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="569*"/>
                    </Grid.ColumnDefinitions>

                    <GridSplitter x:Name="splitterPersonal" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                    <ListBox x:Name="lstListaPersonal">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding Imagen}" Width="50" Height="50" Margin="10"/>
                                    <TextBlock Text="{Binding Nombre}" Margin="10" FontSize="13" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Telefono}" Margin="10" FontSize="13" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Tipo}" Margin="10" FontSize="13" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>
                    <Grid Grid.Column="2" Background="WhiteSmoke">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="26"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="26"/>
                            <ColumnDefinition Width="304*"/>
                            <ColumnDefinition Width="247*"/>
                            <ColumnDefinition Width="26"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="lblNombrePersonal" Content="Nombre:" HorizontalAlignment="Left" Margin="11,0,0,0" VerticalAlignment="Center" Height="26" Width="56" Grid.Column="1" Grid.Row="1"/>
                        <Label x:Name="lblApellidoPersonal" Content="Apellido:" HorizontalAlignment="Left" Margin="11,0,0,0" VerticalAlignment="Center" Height="26" Width="56" Grid.Column="1" Grid.Row="2"/>
                        <Label x:Name="lblEdadPersonal" Content="Edad:" HorizontalAlignment="Left" Margin="27,0,0,0" VerticalAlignment="Center" Height="26" Width="40" Grid.Column="1" Grid.Row="3" RenderTransformOrigin="0.737,0.661"/>
                        <Label x:Name="lblTelefonoPersonal" Content="Teléfono:" HorizontalAlignment="Left" Margin="9,0,0,0" VerticalAlignment="Center" Height="26" Width="58" Grid.Column="1" Grid.Row="4"/>
                        <Label x:Name="lblDireccionPersonal" Content="Dirección:" Margin="5,0,0,0" VerticalAlignment="Center" Height="26" Grid.Row="5" HorizontalAlignment="Left" Width="62" Grid.Column="1"/>
                        <Label x:Name="lblCorreoPersonal" Content="Correo:" HorizontalAlignment="Left" Margin="18,0,0,0" VerticalAlignment="Center" Height="26" Width="49" Grid.Column="1" Grid.Row="6"/>
                        <Label x:Name="lblSexoPersonal" Content="Sexo:" HorizontalAlignment="Left" Margin="29,13,0,13" Grid.Column="1" Width="38" Grid.Row="7" />
                        <TextBox x:Name="txtnombrePersonal" Margin="78,0,37,0" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="1"
                                 Text="{Binding ElementName=lstListaPersonal, Path=SelectedItem.Nombre}" FontSize="16" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtApellidoPersonal" Margin="78,0,37,0" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="1" Height="18" RenderTransformOrigin="0.5,0.5" Grid.Row="2"
                                 Text="{Binding ElementName=lstListaPersonal, Path=SelectedItem.Apellido}" FontSize="16" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtEdadPersonal" Margin="78,0,37,0" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="3"
                                 Text="{Binding ElementName=lstListaPersonal, Path=SelectedItem.Edad}" FontSize="16" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtTelefonoPersonal" Margin="78,0,37,0" TextWrapping="Wrap"  VerticalAlignment="Center" Height="18" Grid.Column="1" Grid.Row="4"
                                 Text="{Binding ElementName=lstListaPersonal, Path=SelectedItem.Telefono}" FontSize="16" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtCorreoPersonal" Margin="78,0,37,0" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="6"
                                 Text="{Binding ElementName=lstListaPersonal, Path=SelectedItem.Correo}" FontSize="16" FontWeight="SemiBold"/>
                        <TextBox x:Name="txtDireccionPersonal" Margin="78,0,37,0" TextWrapping="Wrap"  VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="5"
                                 Text="{Binding ElementName=lstListaPersonal, Path=SelectedItem.Direccion}" FontSize="16" FontWeight="SemiBold"/>
                        <RadioButton x:Name="radioFemeninoPersonal" Content="F" HorizontalAlignment="Left" Margin="72,22,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="25" Grid.Row="7"
                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Mujer, Converter={StaticResource GeneroConverter}, ElementName=lstListaPersonal}" GroupName="Genero"/>
                        <RadioButton x:Name="radioMasculinoPersonal" Content="M" HorizontalAlignment="Left" Margin="102,22,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="30" Grid.Row="7"
                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Hombre, Converter={StaticResource GeneroConverter}, ElementName=lstListaPersonal}" GroupName="Genero"/>
                        <RadioButton x:Name="radioOtroPErsonal" Content="O" HorizontalAlignment="Left" Margin="137,23,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="31" Grid.Row="7"
                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Otro, Converter={StaticResource GeneroConverter}, ElementName=lstListaPersonal}" GroupName="Genero" />
                        <Button x:Name="btnConfirmarModificacionPersonal" Content="Confirmar modificación" Margin="29,19,37,0" Grid.Column="2" Height="20" VerticalAlignment="Top" Grid.Row="7"/>
                        <Image Margin="29,36,37,39"
                            Source="{Binding ElementName=lstListaPersonal, Path=SelectedItem.Imagen}"
                            Stretch="Uniform" Grid.Column="2" Grid.RowSpan="6" Grid.Row="1"/>
                        <Rectangle Grid.RowSpan="9"  Fill="CadetBlue"/>
                        <Rectangle Grid.ColumnSpan="7" Fill="CadetBlue"/>
                        <Rectangle Grid.RowSpan="9" Grid.Column="6" Fill="CadetBlue"/>
                        <Rectangle Grid.ColumnSpan="7" Grid.Row="8" Fill="CadetBlue"/>
                        <Label x:Name="lblTipoPersonal" Content="Tipo:" HorizontalAlignment="Left" Margin="173,14,0,14" Grid.Column="1" Width="38" Grid.Row="7" />
                        <RadioButton x:Name="radioSanitarioPersonal" Content="S" HorizontalAlignment="Left" Margin="211,22,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="25" Grid.Row="7"
                                     IsChecked="{Binding SelectedItem.Tipo, ConverterParameter=Sanitario, Converter={StaticResource TipoPersonalConverter}, ElementName=lstListaPersonal}" GroupName="Tipo"/>
                        <RadioButton x:Name="radioLimpiezaPersonal" Content="L" HorizontalAlignment="Left" Margin="241,22,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="30" Grid.Row="7"
                                     IsChecked="{Binding SelectedItem.Tipo, ConverterParameter=Limpieza, Converter={StaticResource TipoPersonalConverter}, ElementName=lstListaPersonal}" GroupName="Tipo"/>
                        <Image Grid.Column="1" HorizontalAlignment="Left" Height="28" Margin="271,16,0,0" Grid.Row="7" VerticalAlignment="Top" Width="27" 
                               ToolTip="S Sanitario - L Limpieza" 
                               Source="\imagenes\interrogacion.jpg"
                               />
                    </Grid>

                </Grid>
            </TabItem>
        </TabControl>
        <Button x:Name="btnAlta" Content="Dar de alta" HorizontalAlignment="Left" Margin="23,0,0,0" VerticalAlignment="Center" Width="74" Background="WhiteSmoke" Click="btnAltaPaciente"/>
        <Button x:Name="btnBaja" Content="Dar de baja" HorizontalAlignment="Left" Margin="119,0,0,0" VerticalAlignment="Center" Width="74" Background="WhiteSmoke" Click="btnBajaPaciente"/>
    </Grid>
</Window>
