                                <Image Source="\datos\imagenes\femenino.png" Width="20" Height="20" ToolTip="Femenino"/>
                            </RadioButton>
                            <RadioButton x:Name="radioMasculinoHistoriales" VerticalAlignment="Center"
                                         IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Hombre, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41">
                                <Image Source="\datos\imagenes\masculino.png" Width="20" Height="20" ToolTip="Masculino"/>
                            </RadioButton>
                            <RadioButton x:Name="radioOtroHistoriales" VerticalAlignment="Center"
                                         IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Otro, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41">
                                <Image Source="\datos\imagenes\otro.png" Width="20" Height="20" ToolTip="Otro Género"/>
                            </RadioButton>
                        </StackPanel>
                        <Image x:Name="btnConfirmarModificacionHistorial" Grid.Column="4" Grid.Row="7" VerticalAlignment="Center" Height="30" MouseDown="btnConfirmarModificacionHistorial_MouseDown" Source="\datos\imagenes\confirmar_modificacion.png"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Grid.Column="4" Grid.RowSpan="6" Grid.Row="1">
                            <Image Source="{Binding ElementName=lstListaHistoriales, Path=SelectedItem.Imagen}" Width="150" Height="130" Stretch="UniformToFill"/>
                        </Border>
                        <Rectangle Grid.RowSpan="9"  Fill="LightSkyBlue"/>
                        <Rectangle Grid.ColumnSpan="6" Fill="LightSkyBlue"/>
                        <Rectangle Grid.RowSpan="9" Grid.Column="5" Fill="LightSkyBlue"/>
                        <Rectangle Grid.ColumnSpan="6" Grid.Row="8" Fill="LightSkyBlue"/>
                    </Grid>

                </Grid>
            </TabItem>

            <TabItem Header="Citas" Background="LightBlue"/>

            <TabItem Header="Personal" Background="LightBlue">
