                        <Label x:Name="lblSexoPacientes" Content="Sexo:" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" Grid.Row="7"/>
                        <TextBox x:Name="txtnombrePacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="1" 
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Nombre}" FontSize="16" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtApellidoPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Apellido}" FontSize="16" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtEdadPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="3"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Edad}" FontSize="16" FontWeight="DemiBold">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Validation.HasError" Value="True">
                                            <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                                            <Setter Property="Background" Value="LightCoral"/>
                                            <Setter Property="BorderBrush" Value="Red"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                            <!--
                            <TextBox.ValidationRules>
                                <local:NumericValidationRule ErrorMessage="La edad debe ser un número entero."/>
                            </TextBox.ValidationRules>
                            -->
                        </TextBox>
                        <TextBox x:Name="txtTelefonoPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="4"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Telefono}" FontSize="16" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtDireccionPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="5"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Direccion}" FontSize="16" FontWeight="DemiBold"/>
                        <TextBox x:Name="txtCorreoPacientes" TextWrapping="Wrap" VerticalAlignment="Center" Grid.Column="2" Grid.Row="6"
                                 Text="{Binding ElementName=lstListaPacientes,
                                   Path=SelectedItem.Correo}" FontSize="16" FontWeight="DemiBold"/>
                        <!--<Button x:Name="btnConfirmarModificacionPacientes" Grid.Column="4" Height="20" VerticalAlignment="Center" Grid.Row="7">
                            <Image Source="\datos\imagenes\confirmar_modificacion.png" Width="20" Height="20"></Image>
                        </Button> -->
                        <Image x:Name="btnConfirmarModificacionPacientes" Grid.Column="4" Grid.Row="7" VerticalAlignment="Center" Height="30" MouseDown="btnConfirmarModificacionPacientes_MouseDown" Source="\datos\imagenes\confirmar_modificacion.png"/>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Grid.Column="4" Grid.RowSpan="6" Grid.Row="1">
                            <Image Source="{Binding ElementName=lstListaPacientes, Path=SelectedItem.Imagen}" Width="150" Height="130" Stretch="UniformToFill"/>
                        </Border>
                        <Rectangle Grid.RowSpan="9"  Fill="LightSkyBlue"/>
                        <Rectangle Grid.ColumnSpan="7" Fill="LightSkyBlue"/>
                        <Rectangle Grid.RowSpan="9" Grid.Column="6" Fill="LightSkyBlue"/>
                        <Rectangle Grid.ColumnSpan="7" Grid.Row="8" Fill="LightSkyBlue"/>
                        <StackPanel Grid.Column="2" Grid.Row="7" Orientation="Horizontal">
                            <RadioButton x:Name="radioFemeninoPacientes" VerticalAlignment="Center"
                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Mujer, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41">
                                <Image Source="\datos\imagenes\femenino.png" Width="20" Height="20" ToolTip="Femenino"/>
                            </RadioButton>
                            <RadioButton x:Name="radioMasculinoPacientes" VerticalAlignment="Center"
                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Hombre, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41">
                                <Image Source="\datos\imagenes\masculino.png" Width="20" Height="20" ToolTip="Masculino"/>
                            </RadioButton>
                            <RadioButton x:Name="radioOtroPacientes" VerticalAlignment="Center"
                                     IsChecked="{Binding SelectedItem.Genero, ConverterParameter=Otro, Converter={StaticResource GeneroConverter}, ElementName=lstListaPacientes}" Width="41">
                                <Image Source="\datos\imagenes\otro.png" Width="20" Height="20" ToolTip="Otro Género"/>
                            </RadioButton>
                        </StackPanel>
                    </Grid>

                </Grid>
            </TabItem>

