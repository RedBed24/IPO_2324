                        <Label x:Name="lblDireccionHistorial" Content="Dirección:" Margin="5,0,0,0" VerticalAlignment="Center" Height="26" Grid.Row="5" HorizontalAlignment="Left" Width="62" Grid.Column="1"/>
                        <Label x:Name="lblCorreoHistorial" Content="Correo:" HorizontalAlignment="Left" Margin="18,0,0,0" VerticalAlignment="Center" Height="26" Width="49" Grid.Column="1" Grid.Row="6"/>
                        <Label x:Name="lblSexoHistorial" Content="Sexo:" HorizontalAlignment="Left" Margin="29,13,0,0" VerticalAlignment="Top" Grid.Column="1" Height="26" Width="38" Grid.Row="7" />
                        <TextBox x:Name="txtnombreHistorial" Margin="78,0,29,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="1"/>
                        <TextBox x:Name="txtApellidoHistorial" Margin="78,0,29,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" RenderTransformOrigin="0.5,0.5" Grid.Row="2"/>
                        <TextBox x:Name="txtEdadHistorial" Margin="78,0,29,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="3"/>
                        <TextBox x:Name="txtTelefonoHistorial" Margin="78,0,29,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Height="18" Grid.Column="1" Grid.Row="4"/>
                        <TextBox x:Name="txtCorreoHistorial" Margin="78,0,29,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="6"/>
                        <TextBox x:Name="txtDireccionHistorial" Margin="78,0,29,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="5"/>
                        <RadioButton x:Name="radioFemeninoHistorial" Content="F" HorizontalAlignment="Left" Margin="72,22,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="32" Grid.Row="7"/>
                        <RadioButton x:Name="radioMasculinoHistorial" Content="M" HorizontalAlignment="Left" Margin="118,22,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="30" Grid.Row="7"/>
                        <Button x:Name="btnConfirmarModificacionHistorial" Content="Confirmar modificación" Margin="79,19,96,0" Grid.Column="2" Height="20" VerticalAlignment="Top" Grid.Row="7" Grid.ColumnSpan="2"/>
                        <Image Margin="10,19,10,3"
                            Source="/imagenes/usuario_cualquiera.jpg"
                            Stretch="Uniform" Grid.Column="3" Grid.RowSpan="4" Grid.Row="1"/>
                        <StackPanel Grid.RowSpan="9" Background="CadetBlue" HorizontalAlignment="Center" Width="26" Margin="0,10,0,10"/>
                        <StackPanel Grid.ColumnSpan="5" Background="CadetBlue" Height="26" VerticalAlignment="Center" Margin="10,0,26,0"
                                    />
                        <StackPanel Grid.Row="8" Grid.ColumnSpan="5" Margin="13,0,26,0" Background="CadetBlue" Height="26" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="4" Margin="0,10,0,10" Grid.RowSpan="9" Background="CadetBlue" HorizontalAlignment="Center" Width="26"/>
                        <ListBox x:Name="listHistorialDolenciasTratamientosFechas" Grid.Column="2" Grid.Row="1" Margin="7,17,10,0" Grid.RowSpan="4"/>
                    </Grid>

                </Grid>
            </TabItem>

            <TabItem Header="Citas" Background="WhiteSmoke"/>

            <TabItem Header="Personal" Background="WhiteSmoke">
                <Grid Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="211*"/>
                        <ColumnDefinition Width="14*"/>
                        <ColumnDefinition Width="569*"/>
                    </Grid.ColumnDefinitions>

                    <GridSplitter x:Name="splitterPersonal" Grid.Column="1" Margin="0,0,5,0" Width="5" HorizontalAlignment="Stretch"/>

                    <ListBox x:Name="lstListaPersonal"/>
                    <Grid Grid.Column="2" Background="WhiteSmoke">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="26*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="52*"/>
                            <RowDefinition Height="26*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="26*"/>
                            <ColumnDefinition Width="304*"/>
                            <ColumnDefinition Width="247*"/>
                            <ColumnDefinition Width="26*"/>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="lblNombrePersonal" Content="Nombre:" HorizontalAlignment="Left" Margin="11,0,0,0" VerticalAlignment="Center" Height="26" Width="56" Grid.Column="1" Grid.Row="1"/>
