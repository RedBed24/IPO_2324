                        <Label x:Name="lblDireccionPersonal" Content="Dirección:" Margin="5,0,0,0" VerticalAlignment="Center" Height="26" Grid.Row="5" HorizontalAlignment="Left" Width="62" Grid.Column="1"/>
                        <Label x:Name="lblCorreoPersonal" Content="Correo:" HorizontalAlignment="Left" Margin="18,0,0,0" VerticalAlignment="Center" Height="26" Width="49" Grid.Column="1" Grid.Row="6"/>
                        <Label x:Name="lblSexoPersonal" Content="Sexo:" HorizontalAlignment="Left" Margin="29,13,0,13" Grid.Column="1" Width="38" Grid.Row="7" />
                        <TextBox x:Name="txtnombrePersonal" Margin="78,0,37,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="1"/>
                        <TextBox x:Name="txtApellidoPersonal" Margin="78,0,37,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" RenderTransformOrigin="0.5,0.5" Grid.Row="2"/>
                        <TextBox x:Name="txtEdadPersonal" Margin="78,0,37,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="3"/>
                        <TextBox x:Name="txtTelefonoPersonal" Margin="78,0,37,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Height="18" Grid.Column="1" Grid.Row="4"/>
                        <TextBox x:Name="txtCorreoPersonal" Margin="78,0,37,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="6"/>
                        <TextBox x:Name="txtDireccionPersonal" Margin="78,0,37,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Grid.Column="1" Height="18" Grid.Row="5"/>
                        <RadioButton x:Name="radioFemeninoPersonal" Content="F" HorizontalAlignment="Left" Margin="78,22,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="25" Grid.Row="7"/>
                        <RadioButton x:Name="radioMasculinoPersonal" Content="M" HorizontalAlignment="Left" Margin="115,22,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="30" Grid.Row="7"/>
                        <Button x:Name="btnConfirmarModificacionPersonal" Content="Confirmar modificación" Margin="29,19,37,0" Grid.Column="2" Height="20" VerticalAlignment="Top" Grid.Row="7"/>
                        <Image Margin="29,36,37,39"
                            Source="/imagenes/usuario_cualquiera.jpg"
                            Stretch="Uniform" Grid.Column="2" Grid.RowSpan="6" Grid.Row="1"/>
                        <StackPanel Grid.RowSpan="9" Background="CadetBlue" HorizontalAlignment="Center" Width="26" Margin="0,10,0,10"/>
                        <StackPanel Grid.ColumnSpan="4" Background="CadetBlue" Height="26" VerticalAlignment="Center" Margin="10,0,26,0"
                                    />
                        <StackPanel Grid.Row="8" Grid.ColumnSpan="4" Margin="13,0,26,0" Background="CadetBlue" Height="26" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="3" Margin="0,10,0,10" Grid.RowSpan="9" Background="CadetBlue" HorizontalAlignment="Center" Width="26"/>
                        <Label x:Name="lblTipoPersonal" Content="Tipo:" HorizontalAlignment="Left" Margin="162,16,0,10" Grid.Column="1" Width="38" Grid.Row="7" />
                        <RadioButton x:Name="radioSanitarioPersonal" Content="S" HorizontalAlignment="Left" Margin="202,24,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="25" Grid.Row="7"/>
                        <RadioButton x:Name="radioLimpiezaPersonal" Content="L" HorizontalAlignment="Left" Margin="239,24,0,0" VerticalAlignment="Top" Grid.Column="1" Height="14" Width="30" Grid.Row="7"/>
                    </Grid>

                </Grid>
            </TabItem>
            <ListBox d:ItemsSource="{d:SampleData ItemCount=5}"/>
        </TabControl>
        <Button x:Name="btnAlta" Content="Dar de alta" HorizontalAlignment="Left" Margin="23,0,0,0" VerticalAlignment="Center" Width="74" Background="WhiteSmoke"/>
        <Button x:Name="btnBaja" Content="Dar de baja" HorizontalAlignment="Left" Margin="119,0,0,0" VerticalAlignment="Center" Width="74" Background="WhiteSmoke"/>
    </Grid>
</Window>
